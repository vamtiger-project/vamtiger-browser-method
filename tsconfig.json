{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "commonjs",
        "outDir": "build",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "declaration": true
    },
    "include": [
        "source/**/*"
    ]
}