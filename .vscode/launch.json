    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Unit Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceRoot}/build/test",
                "--recursive"
            ],
            "outFiles": [
                "${workspaceRoot}/build/**/*.js"
            ],
            "runtimeVersion": "10.14.2"
        }
    ]
}